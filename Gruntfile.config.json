{
  "name": "subclass-config",
  "src_dir": "src",
  "release_dir": "release",
  "lib": {
    "dir": {
      "src": "<%= config.src_dir %>",
      "release": "<%= config.release_dir %>"
    },
    "files": [
      "<%= config.lib.dir.src %>/Class/Type/Config/Config.js",
      "<%= config.lib.dir.src %>/Class/Type/Config/**/*",
      "<%= config.lib.dir.src %>/Parser/**/*",
      "<%= config.lib.dir.src %>/Helper/**/*",
      "<%= config.lib.dir.src %>/PropertyManager.js",
      "<%= config.lib.dir.src %>/PropertyType.js",
      "<%= config.lib.dir.src %>/Property.js",
      "<%= config.lib.dir.src %>/Error/Option/*.js",
      "<%= config.lib.dir.src %>/Error/**/*.js",
      "<%= config.lib.dir.src %>/Extension/**/*.js",
      "<%= config.lib.dir.src %>/Type/Map/MapType.js",
      "<%= config.lib.dir.src %>/Type/Map/*.js",
      "<%= config.lib.dir.src %>/Type/Collection/CollectionType.js",
      "<%= config.lib.dir.src %>/Type/Collection/*.js",
      "<%= config.lib.dir.src %>/Type/Collection/**/*.js",
      "<%= config.lib.dir.src %>/Type/**/*.js",
      "<%= config.lib.dir.src %>/*.js"
    ],
    "files_release": {
      "normal": "<%= config.lib.dir.release %>/<%= config.name %>.js",
      "minimized": "<%= config.lib.dir.release %>/<%= config.name %>.min.js"
    }
  },
  "doc": {
    "dir": "doc/api",
    "files": [
      "<%= config.lib.dir.src %>/**/*.js"
    ]
  },
  "vendors": {
    "dir": "vendors",
    "files": "**/*.js"
  }
}